@using HamburgerShop.ViewModels;
@model HamburgerViewModel

<div class="card-header; text-center;">
    <h2 style="color:darkkhaki; text-align:center">ADMİN HAMBURGER GÜNCELLEME SAYFASI</h2>

    @if (Model != null)
    {
        <h3 class="text-center"> Güncellenecek Hamburger: @Model.HamburgerAdi Fiyatı: @Model.HamburgerFiyati </h3>
    }

</div>
<div class="card-body">
    <form asp-area="Admin" asp-controller="Hamburger" asp-action="Guncelle" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="HamburgerAdi">HAMBURGER ADI:</label>
            <input asp-for="HamburgerAdi" type="text" class="form-control" />
            <span asp-validation-for="HamburgerAdi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HamburgerFiyati">HAMBURGER FİYATI:</label>
            <input asp-for="HamburgerFiyati" type="text" class="form-control" />
            <span asp-validation-for="HamburgerFiyati" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HamburgerResmi">HAMBURGER RESİMİ GÜNCELLEME:</label>
            <input asp-for="HamburgerResmi" type="file" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-3">GÜNCELLE</button>
    </form>
</div>

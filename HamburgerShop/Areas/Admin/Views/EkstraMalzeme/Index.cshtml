@using HamburgerShop.Models.Data.Classes;
@model List<EkstraMalzeme>

@*Burada esktra malzemeleri listesi olacak.Ayrıca silme ve güncelleme ile ilgili buttonlar olacak*@

<div class="card-header; text-center">
    <h2 style="color:darkkhaki">EKSTRA MALZEMELER LİSTESİ SAYFASI</h2>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ADI</th>
            <th>FİYAT</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @*Burada ekstramalzemeler içerisinden foreach ile gezip, yazdıracağız*@
        @foreach (var icecek in Model)
        {
            <tr>
                <td>@icecek.EkstraMalzemeAdi</td>
                <td>@icecek.EkstraMalzemeFiyati</td>
                <td class="text-end">
                    <a class="btn btn-warning" asp-area="Admin" asp-controller="EkstraMalzeme" asp-action="Guncelle" asp-route-id="@icecek.EkstraMalzemeId">Güncelle</a>
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="EkstraMalzeme" asp-action="Sil" asp-route-id="@icecek.EkstraMalzemeId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@using HamburgerShop.Models.Data.Classes;
@model Icecek

<div class="card-header; text-center;">
    <h2 style="color:darkkhaki; text-align:center">ADMİN ICECEK EKLEME SAYFASI</h2>
</div>

<div class="card-body">
    <form asp-area="Admin" asp-controller="Icecek" asp-action="Ekle" method="post">
        <div class="form-group">
            <label asp-for="IcecekAdi">ICECEK ADI:</label>
            <input asp-for="IcecekAdi" type="text" class="form-control" />
            <span asp-validation-for="IcecekAdi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IcecekFiyati">ICECEK FİYATI:</label>
            <input asp-for="IcecekFiyati" type="number" class="form-control" />
            <span asp-validation-for="IcecekFiyati" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">EKLE</button>
    </form>
</div>

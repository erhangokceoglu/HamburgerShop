@model Siparis
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container justify-content-center text-center align-items-center ;">
    <div class="card-header text-center; mb-4;">
        <h1 style="color:tomato; font-size:24px; text-align:center">
            Sayın kullanıcı, son siparis onaylanacak ve Admin sayfasında Listenecektir.
            Güncelleme yapmak için geriye basınız ve emin olarak onaylayınız.
        </h1>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Hamburger
                </th>
                <th>
                    Fotograf
                </th>
                <th>
                    İçecek
                </th>
                <th>
                    Ekstra Malzemeler
                </th>
                <th>
                    Hamburger Adet
                </th>
                <th>
                    Toplam Tutar
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @*Buraya son sipariş listenecek*@
            @{
                if (Model != null)
                {
                    <tr>
                        <td>@Model.Hamburger.HamburgerAdi</td>
                        <td><img src="~/images/@Model.Hamburger.HamburgerFotograf" height="60px" width="60px" alt="" /></td>
                        <td>@Model.Icecek?.IcecekAdi</td>
                        <td>
                            @foreach (var extra in Model.EkstraMalzemeler)
                            {
                                @(extra.EkstraMalzemeAdi + ",")
                            }
                        </td>
                        <td>@Model.SiparisAdet.ToString()</td>
                        <td>@Model.ToplamTutar</td>

                        <td><a class="btn" style="font-size:24px; background-color:beige; border:solid" asp-action="Index" asp-controller="Home">SİPARİŞ ONAYLA</a> </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


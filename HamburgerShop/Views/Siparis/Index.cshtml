@using HamburgerShop.ViewModels;
@model IndexViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />



<div class="container justify-content-center text-center align-items-center ;">
    <div class="card-header text-center; mb-4;">
        <h1 style="color:darkkhaki; font-size:24px; text-align:center">Sipariş Sayfasına Hoşgeldiniz... Lütfen siparişinizi giriniz</h1>
    </div>
    <form asp-controller="Siparis" asp-action="Index" method="post">
        <div class="mb-3">
            <label class="form-label" style="font-size:24px">Menüler</label>
            <select class="form-select" style="font-size:24px; background-color:beige; border:solid" asp-for="Siparis.Hamburger.HamburgerId">
                @foreach (var item in Model.HamburgerList)
                {
                    <option value="@item.HamburgerId">@(item.HamburgerAdi + "-" + item.HamburgerFiyati + " ₺")</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" style="font-size:24px">Icecekler</label>
            <select class="form-select" style="font-size:24px; background-color:beige; border:solid" asp-for="Siparis.Icecek!.IcecekId">
                @foreach (var item in Model.IcecekList)
                {
                    <option value="@item.IcecekId">@(item.IcecekAdi + "-" + item.IcecekFiyati + " ₺")</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" style="font-size:24px">Ekstra Malzemeler</label>
            <ul class="list-group">
                @for (int i = 0; i < @Model.Ekstralar.Count; i++)
                {
                    <li class="list-group-item">
                        <input class="selectedEkstras" type="hidden" asp-for="@Model.Ekstralar[i].Value">
                        <input class="form-check-input me-1 esktras" type="checkbox" asp-for="@Model.Ekstralar[i].Selected">@Model.Ekstralar[i].Text
                    </li>
                }
            </ul>
        </div>
        <div class="mb-3">
            <label class="form-label" style="font-size:24px">Boyut</label>
            <select class="form-select" style="font-size:24px; background-color:beige; border:solid" asp-for="@Model.BoyutId">
                @foreach (var item in Model.BoyutList)
                {
                    <option value=@item.BoyutId>@(item.BoyutAdi + "-" + @item.BoyutFiyati + " ₺")</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" style="font-size:24px">Adet</label>
            <input class="form-group" type="number" style="font-size:24px; background-color:beige; border:solid" asp-for="@Model.HamburgerAdet" />
        </div>
        <button type="submit" class="btn" style="font-size:24px; background-color:beige; border:solid">SİPARİŞ EKLE</button>
    </form>
</div>

